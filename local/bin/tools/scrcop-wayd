#!/bin/bash

# Check if scrcpy is currently running
export XDG_RUNTIME_DIR="/run/user/$(id -u)" # A slightly safer way to set it
export DBUS_SESSION_BUS_ADDRESS="unix:path=$XDG_RUNTIME_DIR/bus" # Assuming standard path
export SDL_VIDEODRIVER=wayland
echo "Starting scrcpy(Waydroid)."
notify-send "Starting scrcpy(Waydroid)."
# Start scrcpy(waydroid)  in the background
scrcpy   -b 64M  --tcpip=192.168.240.112:5555 &
